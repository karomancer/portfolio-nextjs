{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "next",
  "frontMatter.content.publicFolder": "[[workspace]]/site/public",
  "frontMatter.preview.host": "http://localhost:3000",
  "frontMatter.content.pageFolders": [
    {
      "title": "portfolio",
      "path": "[[workspace]]/site/src/content"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "portfolioPiece",
      "previewPath": null,
      "pageBundle": false,
      "fields": [
        {
          "title": "Piece type",
          "name": "piece_type",
          "type": "taxonomy",
          "taxonomyId": "piece_type",
          "editable": true
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "editable": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "editable": true
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "/portfolio/{{slug}}"
        },
        {
          "title": "Collaborators",
          "name": "collaborators",
          "type": "list"
        },
        {
          "title": "Class",
          "name": "class",
          "editable": true,
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Thumbnail",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Thumbnail Width (cells)",
          "name": "thumbnail_width",
          "type": "number",
          "editable": true
        },
        {
          "title": "Thumbnail Height",
          "name": "thumbnail_height",
          "type": "number",
          "editable": true
        },
        {
          "title": "Cover image",
          "name": "cover",
          "type": "image"
        },
        {
          "title": "OpenGraph Image",
          "name": "og_preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "URL",
          "name": "url",
          "type": "string",
          "editable": true
        },
        {
          "title": "Technologies",
          "name": "technologies",
          "type": "taxonomy",
          "taxonomyId": "technologies",
          "editable": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        },
        {
          "title": "ogpreview",
          "name": "ogpreview",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.taxonomy.customTaxonomy": [
    {
      "id": "piece_type",
      "options": [
        "portfolio",
        "work",
        "journal"
      ]
    },
    {
      "id": "technologies",
      "options": [
        "Google Tiltbrush",
        "Arduino Nano 33 IoT",
        "Autodesk Fusion 360",
        "Python",
        "Shark Euro Pro X (Sewing Machine)",
        "Raspberry Pi 4",
        "Iwata Sprint Compressor (Airbrush)",
        "CSS",
        "React",
        "TypeScript",
        "Adobe Illustrator",
        "C#",
        "Teensy 4.1",
        "Unity",
        "Figma",
        "Adobe Premiere Pro",
        "Adobe AfterEffects",
        "Adobe Premiere",
        "HTML",
        "JavaScript",
        "Ultimaker 3",
        "CNC Router",
        "Helix Mini Laser Cutter",
        "TouchDesigner",
        "Balsamiq",
        "Dart",
        "Flutter",
        "Electron",
        "Node.js",
        "Unreal Engine v5",
        "Google Tilt Brush",
        "Adobe Aero",
        "Adobe After Effects",
        "Adobe Photoshop",
        "DALLÂ·E 2",
        "Midjourney",
        "Adobe InDesign"
      ]
    }
  ]
}